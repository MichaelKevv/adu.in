<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvListPengaduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lbIdPengaduanList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00000"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbNikList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIK : 000" />

                <TextView
                    android:id="@+id/lbNamaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama : ABC" />

                <TextView
                    android:id="@+id/lbTelpList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon : 000" />

                <TextView
                    android:id="@+id/lbSubjekList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subjek : AAA" />

                <TextView
                    android:id="@+id/lbIsiList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Isi Laporan :
                    \nAAA
                    \nAAA" />

                <TextView
                    android:id="@+id/lbTglList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal : 00-00-0000" />

                <TextView
                    android:id="@+id/lbStatusList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status : Baru" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>